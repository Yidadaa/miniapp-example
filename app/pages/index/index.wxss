.user-img {
  width: 100%;
  position: absolute;
  top: 0;
  z-index: -1;
}

.container {
  
}

.content-container {
  margin-top: 180px;
  background-color: #fff;
  width: 100%;
}

.content-list {
  position: relative;
  top: -60px;
}

.user-info {
  text-align: right;
  position: relative;
  top: -90px;
}

.user-block {
  height: 100px;
}

.user-avatar {
  height: 100px;
  width: 100px;
  float: right;
  margin: 15px;
  margin-bottom: 0;
  border: 3px solid #fff;
  box-shadow: 0 0 1px rgba(0, 0, 0, 0.5);
}

.user-name {
  color: #fff;
  font-style: bold;
  text-shadow: 1px 1px 0px rgba(0, 0, 0, 1);
  padding-top: 50px;
}

.user-motto {
  color: #aaa;
  font-size: 16px;
  width: 100%;
  float: right;
  margin-right: 15px;
  line-height: 30px;
}

.list-detail {
  display: flex;
  height: auto;
  width: 100%;
}

.list-time {
  width: 100px;
  font-size: 26px;
  font-weight: bold;
  text-align: center;
}

.list-content {
  width: 100%;
}

.list-wrp {
  display: flex;
  align-items: flex-start;
  max-height: 80px;
  margin: 10px;
}

.list-img {
  width: 80px;
  height: 80px;
  min-width: 80px;
}

.list-text {
  display: inline-block;
  font-size: 14px;
  margin-left: 10px;
  text-overflow: ellipsis;
  overflow: hidden;
  max-height: 80px;
}

.share-wrp {
  flex-wrap: wrap;
  background-color: #eee;
  max-height: 100px;
  padding: 5px;
  box-sizing: border-box;
}

.share-comment {
  width: 100%;
  font-size: 14px;
  margin-bottom: 5px;
}

.share-info {
  display: flex;
  align-items: center;
}

.share-img {
  height: 50px;
  width: 50px;
  min-width: 50px;
}

.share-text {
  color: #555;
}